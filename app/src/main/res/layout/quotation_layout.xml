<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >


        <TextView
            android:id="@+id/tvItem_count"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Pieces"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"
            android:gravity="center"
            android:background="@drawable/organge_stroke_bg"
            />
        <TextView
            android:id="@+id/tvSub_category"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Sub-Category"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/organge_stroke_bg"
            />
        <TextView
            android:id="@+id/tvGrossWeight"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Gross weight"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/organge_stroke_bg"
            />

        <TextView
            android:id="@+id/tvTouch"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Touch"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"
            android:gravity="center"
            android:background="@drawable/organge_stroke_bg"
            />
        <TextView
            android:id="@+id/tvPurity"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Purity"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/organge_stroke_bg4"
            />



    </LinearLayout>

























</RelativeLayout>